//////////////////////////////////////////////////////////////////////////
// Generic System Points
//////////////////////////////////////////////////////////////////////////

// Enables a system when OAT is less than (heating) or greater than (cooling) this setpoint
SystemEnableOutsideAirTempSp: AirTempSp {
  outside
  enable
}

// System run status sensor
SystemRunSensor: BoolPoint & SensorPoint {
  run
}

