//////////////////////////////////////////////////////////////////////////
// Boiler Stage Points
//////////////////////////////////////////////////////////////////////////

// Boiler stage command
BoilerStageCmd: NumberPoint & CmdPoint {
  boiler
}

// Boiler stage sensor
BoilerStageSensor: NumberPoint & SensorPoint {
  boiler
}

//////////////////////////////////////////////////////////////////////////
// Boiler Firing Points
//////////////////////////////////////////////////////////////////////////

// Boiler firing rate sensor
BoilerFireRateSensor: NumberPoint & SensorPoint {
  boiler
  firing
}

// Boiler firing rate command
BoilerFireRateCmd: NumberPoint & CmdPoint {
  boiler
  firing
  unit: "%"
}

//////////////////////////////////////////////////////////////////////////
// Boiler Run/Enable Points
//////////////////////////////////////////////////////////////////////////

// Boiler enable command
BoilerEnableCmd: BoolPoint & CmdPoint {
  boiler
  enable
}

// Boiler run sensor
BoilerRunSensor: BoolPoint & SensorPoint {
  boiler
  run
}

//////////////////////////////////////////////////////////////////////////
// Boiler Level/Runtime Points
//////////////////////////////////////////////////////////////////////////

// Boiler water level sensor
BoilerLevelSensor: NumberPoint & SensorPoint {
  boiler
  level
}

// Boiler runtime sensor
BoilerRuntimeSensor: NumberPoint & SensorPoint {
  boiler
  run
}

