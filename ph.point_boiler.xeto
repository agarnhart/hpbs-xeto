//////////////////////////////////////////////////////////////////////////
// Boiler Stage Points
//////////////////////////////////////////////////////////////////////////

// Boiler Stage Command
BoilerStageCmd: StageCmd { boiler }

// Boiler Stage Sensor
BoilerStageSensor: StageSensor { boiler }

//////////////////////////////////////////////////////////////////////////
// Boiler Heating Points
//////////////////////////////////////////////////////////////////////////

// Boiler Heat Command
BoilerHeatCmd: NumberPoint & CmdPoint {
  boiler  
  heat
  unit: Unit <fixed> "%"
}

// Boiler Heat Sensor
BoilerHeatSensor: NumberPoint & SensorPoint {
  boiler
  heat
  unit: Unit <fixed> "%"
}
//////////////////////////////////////////////////////////////////////////
// Boiler Run Points
//////////////////////////////////////////////////////////////////////////

// Boiler Enable Command
BoilerEnableCmd: EnableCmd { boiler }

// Boiler Run command
BoilerRunCmd: RunCmd { boiler }

// Boiler Run Sensor
BoilerRunSensor: RunSensor { boiler }

//////////////////////////////////////////////////////////////////////////
// Boiler Level/Runtime Points
//////////////////////////////////////////////////////////////////////////

// Boiler Water Level Sensor
BoilerWaterLevelSensor: NumberPoint & SensorPoint {
  boiler
  water
  level
  unit: Unit <fixed> "%"
}

// Relating to a runtime of an equip/system entity
//*runtime: Marker

// Boiler Runtime Sensor
BoilerRuntimeSensor: NumberPoint & SensorPoint {
  boiler
  runtime
  unit: Unit <quantity:"time"> "hr"
}
