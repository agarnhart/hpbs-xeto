// HPBS Steam Point Types
//
// Extends Haystack ph.points steam types with HPBS-specific
// defaults for naming conventions and visualization colors.
//

//////////////////////////////////////////////////////////////////////////
// Steam Flow Points
//////////////////////////////////////////////////////////////////////////

// Steam flow sensor
HpbsSteamFlowSensor: SteamFlowSensor & HpbsSteamColor {
  unit: "lb/h"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "StmFlow"
}

//////////////////////////////////////////////////////////////////////////
// Steam Pressure Points
//////////////////////////////////////////////////////////////////////////

// Steam pressure sensor
HpbsSteamPressureSensor: SteamPressureSensor & HpbsSteamColor {
  unit: "psi"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "StmPress"
}

// Steam pressure setpoint
HpbsSteamPressureSp: SteamPressureSp & HpbsSetpointColor {
  unit: "psi"
  hisMode: "cov"
  hisCollectInterval: "24hr"
  navName: "StmPressSp"
}

//////////////////////////////////////////////////////////////////////////
// Steam Temperature Points
//////////////////////////////////////////////////////////////////////////

// Steam temperature sensor
HpbsSteamTempSensor: SteamTempSensor & HpbsSteamColor {
  unit: "°F"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "StmTemp"
}

//////////////////////////////////////////////////////////////////////////
// Steam Energy Points
//////////////////////////////////////////////////////////////////////////

// Steam energy sensor (totalized)
HpbsSteamEnergySensor: SteamEnergySensor & HpbsSteamColor {
  unit: "kBTU"
  hisMode: "consumption"
  hisTotalized
  hisCollectInterval: "5min"
  navName: "StmEnergy"
}

//////////////////////////////////////////////////////////////////////////
// Condensate Points
//////////////////////////////////////////////////////////////////////////

// Condensate flow sensor
HpbsCondensateFlowSensor: WaterFlowSensor & HpbsSteamColor {
  condensate
  unit: "gal/min"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "CondFlow"
}

// Condensate temperature sensor
HpbsCondensateTempSensor: WaterTempSensor & HpbsSteamColor {
  condensate
  unit: "°F"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "CondTemp"
}

