//////////////////////////////////////////////////////////////////////////
// Chiller Stage Points
//////////////////////////////////////////////////////////////////////////

// Chiller stage command
HpbsChillerStageCmd: ChillerStageCmd & HpbsChilledWaterColor {
  hisMode: "cov"
  hisCollectInterval: "24hr"
  navName: "ChlrStgCmd"
}

// Chiller stage status
HpbsChillerStageSensor: ChillerStageSensor & HpbsChilledWaterColor {
  hisMode: "cov"
  hisCollectInterval: "24hr"
  navName: "ChlrStgSts"
}

//////////////////////////////////////////////////////////////////////////
// Chiller Load Points
//////////////////////////////////////////////////////////////////////////

// Chiller capacity/load sensor
HpbsChillerLoadSensor: ChillerLoadSensor & HpbsChilledWaterColor {
  unit: "%"
  hisMode: "sampled"
  hisCollectInterval: "5min"
  navName: "ChlrLoad"
}

//////////////////////////////////////////////////////////////////////////
// Chiller Run/Enable Points
