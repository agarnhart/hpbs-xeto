// Chiller enable command
HpbsChillerEnableCmd: ChillerEnableCmd & HpbsChilledWaterColor {
  hisMode: "cov"
  hisCollectInterval: "24hr"
  navName: "ChlrEnable"
}

// Chiller run status
HpbsChillerRunSensor: ChillerRunSensor & HpbsChilledWaterColor {
  hisMode: "cov"
  hisCollectInterval: "24hr"
  navName: "ChlrRunSts"
}

