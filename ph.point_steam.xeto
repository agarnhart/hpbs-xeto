//////////////////////////////////////////////////////////////////////////
// Steam Flow Points
//////////////////////////////////////////////////////////////////////////

// Point associated with rate of volumetric flow of steam
SteamFlowPoint : NumberPoint <abstract> {
  steam
  flow
  unit: Unit <quantity:"volumetricFlow"> "cfm"
}

// Sensor for volumetric flow of steam
SteamFlowSensor : SteamFlowPoint & SensorPoint

// Setpoint for volumetric flow of steam
SteamFlowSp : SteamFlowPoint & SpPoint

//////////////////////////////////////////////////////////////////////////
// Steam Pressure Points
//////////////////////////////////////////////////////////////////////////

// Point associated with pressure of steam
SteamPressurePoint : NumberPoint <abstract> {
  steam
  pressure
  unit: Unit <quantity:"pressure"> "psi"
}

// Sensor for pressure of steam
SteamPressureSensor : SteamPressurePoint & SensorPoint

// Setpoint for pressure of steam
SteamPressureSp : SteamPressurePoint & SpPoint

